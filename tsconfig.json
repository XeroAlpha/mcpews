{
  "compilerOptions": {
    "moduleResolution": "Node10",
    "module": "ES6",
    "target": "ES2020",
    "lib": [ "ES2020" ],
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
  },
  "include": [
    "src/**/*"
  ]
}